<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Текущая сумма с процентами -->
    <TextView
        android:id="@+id/current_amount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:minHeight="80dp"/>

    <!-- Общая сумма вкладов -->
    <TextView
        android:id="@+id/total_amount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:minHeight="80dp"/>

    <!-- Кнопка "Добавить вклад" -->
    <Button
        android:id="@+id/add_deposit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить вклад"
        android:layout_marginBottom="16dp"/>

    <!-- НОВОЕ: Кнопка "Экспорт" -->
    <Button
        android:id="@+id/export_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Экспорт в CSV"
        android:layout_marginBottom="16dp"/>
    <!-- КОНЕЦ НОВОГО -->

    <!-- Список вкладов -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список вкладов:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/deposits_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
